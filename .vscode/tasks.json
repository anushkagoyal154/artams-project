{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build ARTAMS",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-Wall",
				"-Wextra",
				"-std=c99",
				"-I./core",
				"core/*.c",
				"cli/*.c",
				"-o",
				"artams_cli",
				"-lm"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}